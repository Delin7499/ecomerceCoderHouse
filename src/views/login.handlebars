<form action="/api/users/login" method="POST" class="login-form">
  <div class="form-group">
    <label for="email">Email:</label>
    <input
      type="text"
      name="email"
      id="email"
      placeholder="Enter your email"
      required
    />
  </div>
  <div class="form-group">
    <label for="password">Password:</label>
    <input
      type="password"
      name="password"
      id="password"
      placeholder="Enter your password"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary">Log in</button>
  <p class="signup-link">Don't have an account?
    <a href="/signup">Sign up</a></p>
  <p class="signup-link">Forgot your password?
    <a href="/password-recover">Sign up</a></p>
  <p class="signup-link"><a href="/api/users/github">GitHub Signup</a></p>
</form>